generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  orders    Order[]  // Relation till orders
}

model Order {
  id        Int      @id @default(autoincrement())
  total     Float    
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id]) // Relation till anv√§ndare
}